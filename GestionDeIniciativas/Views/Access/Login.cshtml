@model GestionDeIniciativas.Models.VMLogin;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        body {
            background-color: #f8fcfd;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            flex-direction: column;
        }

        .logo-container {
            width: 100%;
            max-width: 400px; /* Ancho máximo */
            text-align: center; /* Centrar la imagen */
            margin-bottom: 10px;
        }

        .logo {
            width: 100%; /* Ajustar el ancho de la imagen */
            border-radius: 10px 10px 0 0; /* Bordes redondeados en la parte superior */
        }

        .login-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 0 0 10px 10px; /* Bordes redondeados en la parte inferior */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px; /* Ancho máximo */
            box-sizing: border-box; /* Incluye padding y borde en el ancho total */
            text-align: center; /* Centrar el contenido */
            margin-top: 20px;
        }

            .login-container h1 {
                margin-bottom: 20px;
            }

        .input-group {
            margin-bottom: 15px;
            text-align: left; /* Alineación a la izquierda */
        }

        .login-container input[type="email"],
        .login-container input[type="password"] {
            width: calc(100% - 20px); /* Ajusta el ancho restando el padding */
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box; /* Incluye padding y borde en el ancho total */
        }

        .login-container label {
            font-size: 14px;
            display: block; /* Hace que el label ocupe toda la línea */
        }

        .login-container button {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

            .login-container button:hover {
                background-color: #0056b3;
            }

        .login-container .validate-message {
            color: red;
            margin-top: 10px;
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="logo-container">
        <img src="/css/logo.png" alt="Logo" class="logo" />
    </div>
    <div class="login-container">
        <form asp-controller="Access" asp-action="Login" method="post">
            <h1>Inicia sesión</h1>

            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" placeholder="Email" asp-for="Email" />
            </div>

            <div class="input-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" placeholder="Contraseña" asp-for="Password" />
            </div>

            <div class="input-group">
                <label>
                    <input type="checkbox" asp-for="KeepLoggedIn" />
                    Mantener sesión iniciada
                </label>
            </div>

            <button type="submit">Entrar</button>

            @if (ViewData["ValidateMessage"] != null)
            {
                <div class="validate-message">
                    <label>@ViewData["ValidateMessage"]</label>
                </div>
            }
        </form>
    </div>
</body>
</html>
