@model GestionDeIniciativas.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detalles del usuario</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            color: #343a40;
            font-family: 'Roboto', sans-serif;
        }

        h1 {
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        .details-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Estilo de los botones */
        .btn-primary, .btn-secondary {
            transition: background-color 0.3s, transform 0.3s;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
                transform: translateY(-2px);
            }

            .btn-secondary:hover {
                background-color: #565e64;
                border-color: #43494e;
                transform: translateY(-2px);
            }

        .container {
            margin-top: 50px;
        }

        .row {
            justify-content: center;
        }

        .footer {
            margin-top: 40px;
            text-align: center;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Detalles del usuario</h1>
        <div class="row">
            <div class="col-md-8 details-container">
                <div>
                    <h4>Usuario</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Nombre de usuario
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UsuarioId)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Apellidos)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Apellidos)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.UsuarioId" class="btn btn-primary">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
