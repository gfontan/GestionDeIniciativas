@model GestionDeIniciativas.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eliminar Usuario</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            color: #343a40;
            font-family: 'Roboto', sans-serif;
        }

        h1 {
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        h3 {
            font-weight: 400;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-group label {
            font-weight: 500;
        }

        /* Estilo de los botones */
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            transition: background-color 0.3s, transform 0.3s;
        }

            .btn-danger:hover {
                background-color: #bd2130;
                border-color: #b21f2d;
                transform: translateY(-2px);
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
            transition: background-color 0.3s, transform 0.3s;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
                transform: translateY(-2px);
            }

        .container {
            margin-top: 50px;
        }

        .row {
            justify-content: center;
        }

        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .footer {
            margin-top: 40px;
            text-align: center;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Eliminar Usuario</h1>
        <h3>¿Estás seguro de que deseas eliminar este usuario?</h3>
        <div class="row">
            <div class="col-md-8">
                <div class="form-container">
                    <h4>Usuario</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Apellidos)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Apellidos)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="UsuarioId" />
                        <div class="form-group">
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
